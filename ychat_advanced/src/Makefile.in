OBJS=$(addprefix ../obj/,$(SRCS:.cpp=.o))
CC=g++
LDFLAGS=@LDFLAGS@ -lstdc++ -lmysqlclient -lncurses -g 
LDADD=-pthread -D_THREAD_SAFE
all: ychat	
$(SRCS):
	$(CC) $(CFLAGS) -c $*.cpp
$(OBJS):
	$(CC) $(CFLAGS) -c -o $*.o $(notdir $*).cpp
infotext:
	@echo Compiling base
ychat:  infotext $(OBJS) 
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LDADD)
	mv ychat ../bin
	du -k ../bin/ychat
clean:	
	@echo Cleaning base obj
	rm ../obj/*.o 
